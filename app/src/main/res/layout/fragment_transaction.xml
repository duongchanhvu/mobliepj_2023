<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bottomnavigation.TransactionFrag">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@color/lavender">
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaction"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/notification_image_view2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="Calendar"
                    android:src="@drawable/calendar_icon" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:layout_margin="15dp">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="8dp">

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="0dp"
                                android:minWidth="100dp"
                                android:padding="25dp"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:text="Cash in wallet" />

                            <TextView
                                android:layout_width="wrap_content" android:minWidth="150dp"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:text="View all"
                                android:textColor="@color/lavender"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="right"/>

                        </TableRow>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"/>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">


                            <TextView
                                android:layout_width="wrap_content" android:minWidth="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="80dp"
                                android:padding="25dp"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:text="Cash"/>

                            <TextView
                                android:layout_width="wrap_content" android:minWidth="170dp"
                                android:layout_height="wrap_content" android:minHeight="60dp"
                                android:textStyle="bold"
                                android:padding="20dp"
                                android:text="100,000,000,000 Ä‘"
                                android:gravity="center_vertical|right"
                                />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>